<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="@color/colorAccent"
                tools:context=".MainActivity">

    <Button
        android:id="@+id/showfaq"
        android:text="Show FAQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/showconversation"
        android:text="Show Conversation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/showfaq"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/singlefaq"
        android:text="Show Single FAQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/showconversation" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/singlefaq"
        android:orientation="horizontal">
        <Button
            android:id="@+id/login_john"
            android:text="No Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>
        <Button
            android:id="@+id/login_jane"
            android:text="All Values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_john"
            android:layout_toRightOf="@id/login_jessie"
            android:layout_marginBottom="16dp"/>
        <Button
            android:id="@+id/login_jamie"
            android:text="No Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/login_john"
            android:layout_marginBottom="16dp"/>
        <Button
            android:id="@+id/login_jessie"
            android:text="Only Uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_john"
            android:layout_marginBottom="16dp"/>
        <Button
            android:id="@+id/logout"
            android:text="Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_jessie"/>
    </RelativeLayout>


</RelativeLayout>
